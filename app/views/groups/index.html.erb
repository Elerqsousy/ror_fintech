  </tr>

<% @groups.each do |group| %>
  <tr>
    <td><%= group.name %></td>
    <td><%= group.icon %></td>
    <td><%= link_to 'Show', [group.user, group] %></td>
    <td><%= link_to 'Edit', edit_user_group_path(group.user, group) %></td>
    <td><%= link_to 'Destroy', [group.user, group], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

