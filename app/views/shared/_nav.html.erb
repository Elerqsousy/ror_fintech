<% if current_user || !current_page?(root_path) %>
<nav class="navbar navbar-expand-lg navbar-inverse navbar-static-top navbar-dark bg-prim-gradient py-4">
  <div class="container-fluid container">
    <% if back[:show] %>
      <%= button_to back[:path], method: back[:method] || :get, class: 'btn-sec p-0 back-btn' do %>
        <%= render "shared/arrow_left" %>
      <% end %>
    <% end %>

    <h2 class="nav-title m-auto"><%= title %></h2>

    <% if show_menu %>
      <button class="navbar-toggler border-0 p-0 nav-menu-btn" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    <% end %>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <br/>
      <br/>
      <% if user_signed_in?%>
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li> 
        </ul>
        <div class="d-flex">
          <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: 'btn btn-outline-danger border-0 p-0' %>
        </div>
      <% end %>
    </div>

  </div>
</nav>
<% end %>

<%= render 'shared/notification'%>
